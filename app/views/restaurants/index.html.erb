<p id="notice"><%= notice %></p>

<h1 class="d-flex justify-content-center mb-4">Restaurants</h1>
<div class="container">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Stars</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
        <div class="card" style="width: 18rem;">
          <img src="../assets/images/restaurants.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <p><%= restaurant.name %></p>
            <p><%= restaurant.address %></p>
            <p><%= restaurant.category %></p>
            <div class="d-flex justify-content-center">
              <p><%= link_to 'Show', restaurant, class: 'btn btn-primary m-1' %></p>
              <p><%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-info m-1' %></p>
              <p><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger m-1' %></p>
            </div>
          </div>
        </div>
        </tr>
      <% end %>
  </tbody>
</table>
</div>

<br>

